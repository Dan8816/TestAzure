@{
    ViewData["Title"] = "This Product";
}
@using Products.Models
@model ViewModel
@using System.Linq

<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>
<h1>@ViewBag.Product.ProductName</h1>
<p>@ViewBag.Product.Description</p>

<form class="form" action="/LinkCat2Prod/@Model.ViewProduct.Id" method="post" >
  <div class="form-group" style="width: 20%;">
    <input type="hidden" asp-for="Groupings.ProductId" value="@Model.ViewProduct.Id">
    <label for="CategoryList">Categories</label>
    <select class="form-control" asp-for="Groupings.CategoryId">
        @foreach(var cat in @Model.CategoryList)
        {
            <option value="@cat.Id">@cat.CategoryName</option>
        }
    </select><br>
    <button type="submit" class="btn btn-primary mt-4">Submit</button>
  </div>
</form>